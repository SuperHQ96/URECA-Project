<% include ../../../partials/header %>
<% include ../../../partials/navbar %>

  <div class="container">
    <h1>Update fields for area <%= area.area_code %></h1>
    <form action="/database/area/updating" method="post">
      <div class="form-group row">
          <div class="col-xs-8">
            <h2>Area Lead</h2>
            <input class="form-control" type="text" name="area_lead" placeholder="Area lead" value="<%= area.area_lead %>">
          </div>
      </div>
      <div class="form-group row">
          <div class="col-xs-8">
            <h2>Area Lead Email</h2>
            <input class="form-control" type="text" name="area_lead_email" placeholder="Area lead email" value="<%= area.area_lead_email %>">
          </div>
      </div>
      <div class="form-group row">
          <div class="col-xs-8">
            <h2>Area Admin</h2>
            <input class="form-control" type="text" name="area_admin" placeholder="Area admin" value="<%= area.area_admin %>">
          </div>
      </div>
      <div class="form-group row">
          <div class="col-xs-8">
            <h2>Area Admin Email</h2>
            <input class="form-control" type="text" name="area_admin_email" placeholder="Area admin email" value="<%= area.area_admin_email %>">
          </div>
      </div>
      <input type="hidden" name="area_code" value="<%= area.area_code %>">
      </br>
      <div class="form-group">
          <input class="btn btn-lg btn-primary" type="submit" value="Update Record">
      </div>
    </form>
  </div>


  </body>
</html>
