<% include ../../../partials/header %>
<% include ../../../partials/navbar %>
  <div class="container">
    <h1><b>Insert new faculty staff record</b></h1>
    </br>
    <form  action="/faculty_staff/new" method="post">
      <div class="form-group row">
          <div class="col-xs-8">
            <h2>Initial</h2>
            <input class="form-control" type="text" name="initial" placeholder="Initial" required>
          </div>
      </div>
      <div class="form-group row">
          <div class="col-xs-8">
            <h2>Name</h2>
            <input class="form-control" type="text" name="faculty_name" placeholder="Name" required>
          </div>
      </div>
      <div class="form-group row">
          <div class="col-xs-8">
            <h2>Email Address</h2>
            <input class="form-control" type="text" name="email_address" placeholder="Email Address" required>
          </div>
      </div>
      <div class="form-group row">
          <div class="col-xs-8">
            <h2>Current Appointment</h2>
            <input class="form-control" type="text" name="current_appointment" placeholder="Current appointment" required>
          </div>
      </div>
      <div class="form-group row">
        <div class="col-xs-4">
          <h2>Area Code</h2>
          <select class="form-control" name="area_code">
            <% area_codes.forEach(function(area_code){ %>
              <option value="<%= area_code.area_code %>"><%= area_code.area_code %></option>
            <% }) %>
          </select>
        </div>
      </div>
      </br>
      <div class="form-group">
          <input class="btn btn-lg btn-primary" type="submit" value="Insert Record">
      </div>
    </form>
  </div>


  </body>
</html>
