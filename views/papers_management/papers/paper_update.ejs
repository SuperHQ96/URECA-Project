<% include ../../../partials/header %>
<% include ../../../partials/navbar %>
<div class="container">
  <h1>Update <%= paper.course_code%> (Y<%= paper.paperYear %> Semester <%= paper.paperSem %>)</h1>
  <form action="#" method="post">
    <div class="form-group row">
      <div class="col-xs-4">
        <h2>Course Code</h2>
        <select class="form-control" name="course_code">
          <% course_codes.forEach(function(course_code){ %>
            <% if(course_code.course_code == paper.course_code){ %>
              <option value="<%= course_code.course_code %>" selected="selected"><%= course_code.course_code %></option>
            <% } else { %>
                <option value="<%= course_code.course_code %>"><%= course_code.course_code %></option>
            <% } %>
          <% }) %>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-4">
        <h2>
          Chair Review?
        </h2>
        <% if(paper.chairReview){ %>
          <label class="radio-inline"><input type="radio" name="chair_review" checked value = 1>Yes</label>
          <label class="radio-inline"><input type="radio" name="chair_review" value = 0>No</label>
        <% } else { %>
          <label class="radio-inline"><input type="radio" name="chair_review" value = 1>Yes</label>
          <label class="radio-inline"><input type="radio" name="chair_review" checked value = 0>No</label>
        <% } %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-4">
        <h2>Year</h2>
        <select class="form-control" name="year">
          <% for(var i = 2000; i<2050; i++){ %>
            <% if(paper.paperYear == i){ %>
              <option value= <%= i %> selected="selected"><%= i %></option>
            <% } else { %>
              <option value= <%= i %>><%= i %></option>
            <% } %>
          <% } %>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-4">
        <h2>Semester</h2>
        <select class="form-control" name="semester">
          <% for(var j = 1; j<3; j++){ %>
            <% if(paper.paperSem == j){ %>
              <option value= <%= j %> selected="selected"><%= j %></option>
            <% } else { %>
              <option value= <%= j %>><%= j %></option>
            <% } %>
          <% } %>
        </select>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-4">
        <h2>User</h2>
        <select class="form-control" name="user">
          <% if(paper.username == null){ %>
            <option value="None" selected="selected">None</option>
          <% } else { %>
            <option value="None">None</option>
          <% } %>
            <% users.forEach(function(user){ %>
              <% if(paper.username == user.username){ %>
                <option value= "<%= user.username %>" selected="selected"><%= user.username %></option>
              <% } else { %>
                <option value= "<%= user.username %>"><%= user.username %></option>
              <% } %>
            <% }) %>
        </select>
      </div>
    </div>
  </br>
  <div class="form-group">
      <input class="btn btn-lg btn-primary" type="submit" value="Add paper">
  </div>
  </form>
</div>
</body>
</html>
